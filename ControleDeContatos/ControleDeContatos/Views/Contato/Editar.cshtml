@model ContatoModel

@{
    ViewData["Title"] = "Editar Contato";
}
<div class="text-center">

    <h1 class="display-4">Editar Contato</h1>

</div>

<form asp-controller="Contato" asp-action="Alterar" method="post">

    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="nome">Nome:</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do Contato">
    </div>
    <br />

    <div class="form-group">
        <label for="email">E-mail:</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o e-mail do Contato">
    </div>
    <br />

    <div class="form-group">
        <label for="celular">Celular:</label>
        <input type="text" asp-for="Celular" class="form-control" placeholder="Digite o e-Celular do Contato">
    </div>
    <br />


    <button type="submit" class="btn btn-primary card-img-top">Alterar</button>
    <br />
    <br />
    <a class="btn btn-secondary card-img-top" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>