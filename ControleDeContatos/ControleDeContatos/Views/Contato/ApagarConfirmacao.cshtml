@model ContatoModel 
@{
    ViewData["Title"] = "Confirmação apagar o Contato";
}

<div class="text-center">
    <h3>Realmente deseja apagar o contato (@Model.Nome)?</h3>
</div>

<a class="btn btn-primary card-img-top" role="button" asp-controller="Contato" asp-action="Index">Cancelar exclusão</a>
<br />
<br />
<a class="btn btn-danger card-img-top" asp-controller="Contato" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar exclusão</a>